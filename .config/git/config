[include]
  path = ~/.local/.gitconfig
[alias]
  ad  = add
  adp = add -p
  br  = branch
  brd = branch -d
  ch  = checkout
  chb = checkout -b
  cht = checkout -t
  cm  = commit
  cma = commit --amend
  ph  = push
  pho = push -u origin
  pl  = pull
  rpo = remote prune origin
  st  = status
[core]
  editor = nvim
  excludesfile = ~/.config/git/.gitignore_global
[pull]
  rebase = false
